<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="255dp"
        android:layout_height="91dp"
        android:text="@string/initTime"
        android:textSize="72sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTimer">

        <Button
            android:id="@+id/buttonStart"
            android:layout_margin="8dp"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:onClick="onClickStartTimer"
            android:text="@string/buttonStartString" />

        <Button
            android:id="@+id/buttonPause"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickStopTimer"
            android:text="@string/buttonPauseStr" />

        <Button
            android:id="@+id/buttonReset"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCLickRestTimer"
            android:text="@string/buttonResetString" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>